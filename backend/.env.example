# Database (required)
DATABASE_URL=postgresql://user:password@localhost:5432/afrilaunch

# Server
PORT=4000
FRONTEND_URL=http://localhost:3000

# Auth
JWT_SECRET=your-jwt-secret-min-32-chars

# Paystack (live payments: setup fee, marketplace fee)
# Get keys from https://dashboard.paystack.com — use Live keys for production.
# Never commit real keys; set these in your host (e.g. Render) environment.
PAYSTACK_SECRET_KEY=YOUR_PAYSTACK_SECRET_KEY_HERE
PAYSTACK_PUBLIC_KEY=YOUR_PAYSTACK_PUBLIC_KEY_HERE
# URL you register in Paystack Dashboard → Settings → Webhooks (for reference only; not read from .env)
# PAYSTACK_WEBHOOK_URL=https://your-api.example.com/api/v1/webhooks/paystack

# Optional: Stripe (if not using Paystack)
# STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY_HERE
# STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET_HERE

# Email (receipts, notifications)
# SMTP_HOST=...
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=...
# SMTP_PASS=...
# EMAIL_FROM=AfriLaunch Hub <noreply@example.com>
